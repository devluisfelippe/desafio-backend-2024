{
  "compilerOptions": {
    "target": "ES2022",                                  
    "lib": ["ES2023"],                                        
    "module": "Node16",                                
    "resolveJsonModule": true,                         
    "allowJs": true,
    "outDir": "./dist",                                   
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": false,  
    "skipLibCheck": true                                 
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
